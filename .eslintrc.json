{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
        "next/core-web-vitals"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "space-before-function-paren": "off",
        "quotes": "off",
        "semi": "off",
        "no-unused-vars": "warn",
        "comma-dangle": "off",
        "prefer-const": "warn",
        "multiline-ternary": "off",
        "react/jsx-key": "off"
    }
}
